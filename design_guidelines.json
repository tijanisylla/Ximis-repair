    "icons": "lucide-react"
  },
  "layout_strategy": {
    "grid_system": "Bento Grid (Mode A: Tetris)",
    "container_width": "max-w-7xl mx-auto",
    "mobile_first": "Stack vertically on mobile, expand to grid on md/lg screens"
  },
  "components": {
    "hero": {
      "style": "Split screen with diagonal clip-path or overlay",
      "elements": ["H1 Headline", "24/7 Badge (Pulsing)", "Primary CTA (Book Now)", "Secondary CTA (Call Us)", "Trust Indicators"]
    },
    "services": {
      "style": "Bento Grid Cards",
      "interaction": "Hover: Border glow + slight scale up"
    },
    "booking_form": {
      "style": "Tactical/Industrial",
      "elements": ["Input fields with high contrast borders", "Urgency indicator", "Success message toast"]
    },
    "testimonials": {
      "style": "Infinite Marquee or Carousel",
      "content": "Star ratings + User photos"
    }
  },
  "animations": {
    "library": "framer-motion",
    "scroll": "lenis",
    "types": {
      "fade_up": {
        "initial": { "opacity": 0, "y": 20 },
        "whileInView": { "opacity": 1, "y": 0 },
        "viewport": { "once": true }
      },
      "hover_glow": {
        "whileHover": { "boxShadow": "0 0 20px -5px rgba(37, 99, 235, 0.5)", "borderColor": "#2563EB" }
      }
    }
  },
  "instructions_to_main_agent": [
    "Implement the 'Midnight Mechanic' theme strictly. No grey backgrounds, use deep slate/obsidian.",
    "Use 'Oswald' font for all headings to give that industrial/garage look.",
    "Ensure the '20% OFF' promo is visible in the Hero section.",
    "The 'Book Appointment' form must be functional (store in local state) and show a success toast.",
    "Use the provided image URLs for specific sections. Do not use placeholders.",
    "Add a 'sticky' call button on mobile view for easy access.",
    "Integrate the Chicago skyline image in the footer or contact section background to ground the location.",
    "Use 'sonner' for all toast notifications.",
    "Ensure all interactive elements have data-testid attributes."
  ],
  "universal_guidelines": [
    "Avoid generic 'SaaS Blue' gradients. Use sharp, high-contrast colors.",
    "Do not center-align everything. Use asymmetry for visual interest.",
    "Use 2-3x more spacing than usual. Let the design breathe.",
    "Micro-animations on every interaction (hover, focus, click).",
    "Dark mode is the default and only mode for this brand."
  ]
}