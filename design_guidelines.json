{
  "design_system": {
    "typography": {
      "font_family": {
        "heading": "Oswald, sans-serif",
        "body": "Inter, sans-serif",
        "mono": "JetBrains Mono, monospace"
      },
      "scale": {
        "h1": "text-6xl md:text-8xl font-bold tracking-tighter uppercase",
        "h2": "text-4xl md:text-6xl font-bold tracking-tight uppercase",
        "h3": "text-2xl md:text-3xl font-semibold tracking-tight uppercase",
        "body": "text-base md:text-lg leading-relaxed text-slate-300",
        "caption": "text-sm font-medium tracking-widest uppercase text-slate-500"
      },
      "imports": [
        "@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Oswald:wght@400;500;700&display=swap');"
      ]
    },
    "colors": {
      "palette": {
        "background": "#020617",
        "foreground": "#F8FAFC",
        "primary": "#2563EB",
        "primary_foreground": "#FFFFFF",
        "secondary": "#1E293B",
        "secondary_foreground": "#F8FAFC",
        "accent": "#EF4444",
        "accent_foreground": "#FFFFFF",
        "muted": "#0F172A",
        "muted_foreground": "#94A3B8",
        "border": "#1E293B",
        "input": "#1E293B",
        "ring": "#2563EB"
      },
      "tailwind_config_extension": {
        "colors": {
          "midnight": "#020617",
          "slate": {
            "850": "#172033",
            "900": "#0F172A",
            "950": "#020617"
          },
          "neon-blue": "#2563EB",
          "neon-red": "#EF4444"
        },
        "backgroundImage": {
          "gradient-radial": "radial-gradient(var(--tw-gradient-stops))",
          "hero-glow": "conic-gradient(from 180deg at 50% 50%, #2563EB 0deg, #020617 180deg, #2563EB 360deg)"
        }
      }
    },
    "spacing": {
      "container_padding": "px-6 md:px-12 lg:px-24",
      "section_spacing": "py-20 md:py-32",
      "element_spacing": "gap-6 md:gap-12"
    },
    "visual_enhancers": {
      "radius": "0px",
      "shadows": {
        "neon": "0 0 20px -5px rgba(37, 99, 235, 0.5)",
        "card": "0 1px 3px 0 rgba(0, 0, 0, 0.5), 0 1px 2px -1px rgba(0, 0, 0, 0.5)"
      },
      "borders": "1px solid rgba(255, 255, 255, 0.1)",
      "glassmorphism": "backdrop-blur-xl bg-slate-950/70 border border-white/10"
    }
  },
